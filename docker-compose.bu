version: "3"

networks:
  network1:
    name: mynetwork
    external: true
services:
  bind9:
    container_name: app-dns
    image: ubuntu/bind9:latest
    environment:
      - BIND9_USER=root
      - TZ=America/New_York
    ports:
      - "53:53/tcp"
      - "53:53/udp"
    volumes:
      - ./config:/etc/bind
      - ./cache:/var/cache/bind
      - ./records:/var/lib/bind
      - ./tsigkey:/var/tsigkey
    restart: unless-stopped